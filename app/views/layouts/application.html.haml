!!!
%html
  %head
    %meta{ name: 'viewport', content: 'user-scalable=no' }
    %title
      PotentialIronman
    - if browser.tablet?
      - css = 'tablet'
    - elsif browser.mobile?
      - css = 'mobile'
    - else
      - css = 'desktop'
    = stylesheet_link_tag "#{css}/application", media: :all, 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %div#title
      = content_for?( :title ) ? yield( :title ) : 'Potential Ironman'
    - if notice
      %div#notice
        = notice
    - if alert
      %div#alert
        = alert
    %div#contents
      - if params[:dry]
        = render 'layouts/index', obj: User,
          name: 'user',
          columns: %w( name email )
      - else
        = yield
    %div#footer
      %a{ href: 'www.ibtecnologia.com.br' }
        %div#image2
          = image_tag 'qpc.png'
