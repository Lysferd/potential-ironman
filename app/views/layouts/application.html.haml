!!!
%html
  %head
    %meta{ name: 'viewport', content: 'user-scalable=no' }
    %title
      PotentialIronman
    - if browser.tablet? or params[:tablet]
      - css = 'tablet'
    - elsif browser.mobile? or params[:mobile]
      - css = 'mobile'
    - else
      - css = 'desktop'
    = stylesheet_link_tag "#{css}/application", media: :all, 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %div#title
      = content_for?( :title ) ? yield( :title ) : 'Potential Ironman'
    - if notice
      %div#notice
        = notice
    - if alert
      %div#alert
        = alert
    - if user_signed_in?
      %div#hmenu
        = render 'layouts/menu'
    %div#contents
      = yield
    %div#footer
      %div#image2
        = image_tag 'qpc.png'
      %a{ href: 'http://www.ibtecnologia.com.br/' }
