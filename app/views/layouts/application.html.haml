!!!
%html
  %head
    %meta{ name: 'viewport', content: 'user-scalable=no' }
    %title
      PotentialIronman
    - if browser.tablet? or params[:tablet]
      - css = 'tablet'
    - elsif browser.mobile? or params[:mobile]
      - css = 'mobile'
    - else
      - css = 'desktop'
    = stylesheet_link_tag "#{css}/application", media: :all, 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    #title= content_for?( :title ) ? yield( :title ) : 'Potential Ironman'
    #hmenu= render 'layouts/menu' if user_signed_in?
    #loading
    #contents= yield
    #footer
      #image2
        = image_tag 'qpc.png'
      %a{ href: 'http://www.ibtecnologia.com.br/' }
        2014-2015 Â© IB Tecnologia & Sistemas LTDA
      - if current_user
        %p{ style: 'border: 1px green solid' }
          ="User: #{current_user.name}"
          %br/
          ="Permissions: #{current_user.role.label} #{current_user.role.rules}"
          %br/
          - m = desktop? ? 'desktop' : mobile? ? 'mobile' : tablet? ? 'tablet' : 'unknown'
          ="Website mode: #{m} version"
