<div id="formy" style="padding-top: 20px; padding-bottom: 10px;">
  <%= form_for(@platform) do |f| %>
    <% if @platform.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@platform.errors.count, "error") %> prohibited this platform from being saved:</h2>

        <ul>
        <% @platform.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.text_field :label, autofocus: true, placeholder: "Label" %>
    
    <%= f.label :manufacturer_id, "Manufacturer:" %>
    <%= f.select :manufacturer_id, Manufacturer::all.collect { |m| [ m.label, m.id ] } %>
    
