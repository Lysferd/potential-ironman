#formy
  = form_for @client, remote: true do |f|
    - if @client.errors.any?
      %div#error_explanation
        = t :error_notice
        %ul
          - @client.errors.full_messages.each do |message|
            %li
              = message
    = f.text_field :label, placeholder: t( 'forms.label' ), autofocus: true
    #commands
      = f.submit t( :save )
      = f.submit t( :cancel )
