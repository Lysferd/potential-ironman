%div#formy
  = form_for @client do |f|
    - if @client.errors.any?
      %div#error_explanation
        = t :error_notice
        %ul
          - @client.errors.full_messages.each do |message|
            %li
              = message
    = f.text_field :label, placeholder: t( 'forms.label' )
    -#= f.text_field :homepage, placeholder: t( 'forms.homepage' )
    %div#commands
      = f.submit t( :create )
      = f.submit t( :cancel )
