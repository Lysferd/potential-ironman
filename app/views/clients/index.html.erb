<% content_for( :title ) do %>
  Clients
<% end %>

<div id="paper">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Options</th>
      </tr>
    </thead>

    <tbody class="data">
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.label %></td>
          <td>
            <%= link_to "Show", client %>
            <%= link_to "Edit", edit_client_path(client) %>
            <%= link_to "Destroy", client, method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tbody class="commands">
      <tr>
        <td colspan=2>
          <%= button_get "New", new_client_path %>
          <%= button_get "Back", admin_path %>
        </td>
      </tr>
    </tbody>
  </table>
</div>