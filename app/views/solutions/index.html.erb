<h1>Listing solutions</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Manufacturer</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.label %></td>
        <td><%= solution.manufacturer %></td>
        <td><%= solution.platform %></td>
        <td><%= link_to 'Show', solution %></td>
        <td><%= link_to 'Edit', edit_solution_path(solution) %></td>
        <td><%= link_to 'Destroy', solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New', new_solution_path, method: :get %>

<%= button_to "Back", admin_path, method: :get %>
