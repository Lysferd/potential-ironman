<div id="formy" style="padding-top: 20px; padding-bottom: 10px;">
  <%= form_for(@solution) do |f| %>
    <% if @solution.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@solution.errors.count, "error") %> prohibited this solution from being saved:</h2>

        <ul>
        <% @solution.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= f.text_field :label, autofocus: true, placeholder: "Label" %>
    <%= f.text_area :description, placeholder: "Description" %>
    
    <%= f.label :product_id %>
    <%= f.select :product_id, Product::all.collect { |p| [ p.label, p.id ] } %>
    
    <%= f.label :platform_id %>
    <%= f.select :platform_id, Platform::all.collect { |p| [ p.label, p.id ] } %>
    
    <div id="commands">
      <%= f.submit "Create" %>
      <%= f.submit "Cancel" %>
    </div>
  <% end %>
</div>