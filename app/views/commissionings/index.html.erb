<div id="title">Comissionings</div>

<div id="paper-big">
  <table class="comm">
    <thead class="thead">
      <tr>
        <th>Label</th>
        <th>Description</th>
        <th>Client</th>
        <th>Options</th>
      </tr>
    </thead>

    <tbody class="tbody">
      <% @commissionings.each do |commissioning| %>
        <tr>
          <td><%= commissioning.label %></td>
          <td><%= commissioning.description %></td>
          <td><%= Client::find_by_id( commissioning.client_id ).label rescue "NIL" %></td>
          <td><%= link_to "Details", commissioning %></td>
        </tr>
      <% end %>
    </tbody>
    <tbody class="tbody2">
      <tr>
        <td colspan=4>
          <%= button_to "New", new_commissioning_path, method: :get %>
          <%= button_to "Back", admin_path, method: :get %>
        </td>
      </tr>
    </tbody>
  </table>
</div>


