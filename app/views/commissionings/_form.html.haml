#formy
  = form_for @commissioning, remote: true do |f|
    - if @commissioning.errors.any?
      #error_explanation
        = t :error_notice
        %ul
          - @commissioning.errors.full_messages.each do |message|
            %li= message
    = f.text_field :label, placeholder: t( 'forms.label' ), autofocus: true
    = f.text_area :description, placeholder: t( 'forms.description' )
    = f.select :client_id, Client::order( :label ).collect { |c| [ c.label, c.id ] },
      { prompt: 'Selecione um cliente' }
    - if @commissioning.authorized and can? :manage, @commissioning
      = f.select :creator_id, User::all.collect { |u| [ u.name, u.id ] },
        { prompt: 'Selecione um projetista' }
    - if @commissioning.authorized
      = f.label :commissioners, 'Comissionadores:'
      %table
        - User::order( :name ).each_with_index do |u, i|
          - next if u == current_user and cannot? :destroy, @commissioning
          %tr
            %td
              = f.check_box :users, { multiple: true, checked: @commissioning.user_ids.include?( u.id ) }, u.id, ''
              = f.label :users, u.name
    - unless @commissioning.solutions.count.zero?
      = f.check_box :authorized
      = f.label :authorized, t( 'forms.authorized' )
    = f.hidden_field :creator_id, value: @commissioning.creator_id
    = f.hidden_field :referer, value: params[:referer] if params[:referer]
    #commands
      = f.submit t( :create )
      = f.submit t( :cancel )
