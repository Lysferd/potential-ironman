<% content_for( :title ) do %>
  Creating new user
<% end %>

<div id="formy" style="padding-top: 20px; padding-bottom: 10px;">
  <%= form_for( resource, as: resource_name, url: registration_path( resource_name ) ) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field :name, placeholder: "Nome Completo" %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (#@minimum_password_length characters minimum)" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
    <%= f.label :role_ids, "User group(s):" %>
    <%= f.select :role_ids, Role::all.collect { |r| [ r.label, r.id ] } %>
    <div id="commands">
      <%= f.submit "Create" %>
      <%= f.submit "Cancel" %>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>
