%div#formy
  %div#image
    = image_tag 'ib3.png'
  = form_for resource, as: resource_name, url: session_path( resource_name ) do |f|
    = f.email_field :email, autofocus: true, placeholder: t( :email )
    = f.password_field :password, autocomplete: :off, placeholder: t( :password )
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me, "<span></span>#{t( :remember_me )}".html_safe
      %div.inputcheck
    = f.submit :login, { id: "login", data: { disable_with: t( :login_in ) } }
    -#= render 'devise/shared/links'
