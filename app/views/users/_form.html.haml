%div#formy{ style: "padding-top: 20px; padding-bottom: 10px;" }
  = form_for @user do |f|
    - if @user.errors.any?
      %div#error_explanation
        = t :error_notice
        %ul
          - @user.errors.full_messages.each do |message|
            %li
              = message
    = f.text_field :name, placeholder: t( 'forms.full_name' )
    = f.email_field :email, autofocus: true, placeholder: t( 'forms.email' )
    = f.password_field :password, autocomplete: :off,
      placeholder: t( 'forms.password' )
    = f.password_field :password_confirmation, autocomplete: false,
      placeholder: t( 'forms.confirmation' )
    = f.text_field :ctps, placeholder: t( 'forms.ctps' )
    = f.text_field :ci, placeholder: t( 'forms.ci' )
    = f.text_field :cpf, placeholder: t( 'forms.cpf' )
    = f.text_field :pis, placeholder: t( 'forms.pis' )
    = f.text_field :reg, placeholder: t( 'forms.reg' )
    = f.select :role_id, Role::all.collect { |r| [ r.label, r.id ] }, { include_blank: 'Selecione uma permiss√£o' }
    %div#commands
      = f.submit t( :create )
      = f.submit t( :cancel )
