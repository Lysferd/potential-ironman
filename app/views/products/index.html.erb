<div id="title">Products</div>


<div id="paper-big">
  <table class="comm">
    <thead class="thead">
    <tr>
      <th>Label</th>
      <th>Description</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody class="tbody">
    <% @products.each do |product| %>
      <tr>
        <td><%= product.label %></td>
        <td><%= product.description %></td>
        <td><%= link_to "Show", product %></td>
        <td><%= link_to "Edit", edit_product_path(product) %></td>
        <td><%= link_to "Destroy", product, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
    <tbody class="tbody2">
      <tr>
        <td colspan=5>
          <%= button_to "New", new_product_path, method: :get %>
          <%= button_to "Back", admin_path, method: :get %>
        </td>
      </tr>
    </tbody>
</div>
</table>

