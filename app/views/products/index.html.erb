<% content_for( :title ) do %>
  Products
<% end %>

<div id="title">Products</div>


<div id="paper-big">
  <table class="comm">
    <thead class="thead">
    <tr>
      <th>Label</th>
      <th>Description</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody class="tbody">
    <% @products.each do |product| %>
      <tr>
        <td><%= product.label %></td>
        <td><%= product.description %></td>
        <td>
          <%= link_to "Show", product %>
          <%= link_to "Edit", edit_product_path(product) %>
          <%= link_to "Destroy", product, method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
    <tbody class="tbody2">
      <tr>
        <td colspan=3>
          <%= button_get "New", new_product_path %>
          <%= button_get "Back", admin_path %>
        </td>
      </tr>
    </tbody>
</table>
</div>


