%div#formy
  = form_for @product do |f|
    - if @product.errors.any?
      %div#error_explanation
        = t :error_notice
        %ul
          - @product.errors.full_messages.each do |message|
            %li
              = message
    = f.text_field :label, placeholder: t( 'forms.label' )
    = f.text_area :description, placeholder: t( 'forms.description' )
    = f.select :manufacturer_id,
      Manufacturer::order( :label ).collect { |m| [ m.label, m.id ] },
      { include_blank: 'Selecione um fabricante' }
    Platform Whitelist:
    %br
    - Platform::order( :label ).each do |p|
      = f.check_box :platform_whitelist, { multiple: true }, p.id, false
      = f.label :platform_whitelist, p.label
      %br
    %br
    System Whitelist:
    %br
    - Product::order( :label ).each do |p|
      - next if p == @product
      = f.check_box :product_whitelist, { multiple: true }, p.id, false
      = f.label :product_whitelist, p.label
      %br
    %div#commands
      = f.submit t( :create )
      = f.submit t( :cancel )
