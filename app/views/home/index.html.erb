<% content_for( :title ) do %>
  Administração
  <p>Logado como: <%= current_user.name %></p>
<% end %>

<div id="menu">
  <% unless Client::all.empty? and can? [ :create, :edit ], :commissionings %>
    <%= link_to( "Comissionamentos", commissionings_path, class: "button-link" ) %>
    <% unless Commissioning::all.empty? and can? :manage, :commissionings %>
      <%= link_to( "Atividades", activities_path, class: "button-link"  ) %>
      <%= link_to( "Soluções", solutions_path, class: "button-link"  ) %>
    <% end %>
  <% end %>
  
  <%= link_to( "Clientes", clients_path, class: "button-link"  ) %>
  
  <% unless Manufacturer::all.empty? %>
    <%= link_to( "Tipos de Produtos", product_types_path, class: "button-link" ) %>
    <%= link_to( "Produtos", products_path, class: "button-link"  ) %>
    <%= link_to( "Plataformas", platforms_path, class: "button-link"  ) %>
  <% end %>
  
  <%= link_to( "Fabricantes", manufacturers_path, class: "button-link"  ) %>
  
  <% if can? :manage, :all %>
    <%= link_to( "Usuários", users_path, class: "button-link"  ) %>
    <%= link_to( "Certificados", certifications_path, class: "button-link"  ) %>
    <%= link_to( "Permissões", roles_path, class: "button-link"  ) %>
  <% end %>
  
  <%= link_to( "Finalizar Sessão", destroy_user_session_path, method: :delete, class: "button-link", 
      data: { confirm: "This will terminate your login session. Continue?" } ) %>

</div>
