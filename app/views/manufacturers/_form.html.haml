%div#formy
  = form_for @manufacturer do |f|
    - if @manufacturer.errors.any?
      %div#error_explanation{ style: 'border: 1px solid red;' }
        = t :error_notice
        %ul
          - @manufacturer.errors.full_messages.each do |message|
            %li
              = message
    = f.text_field :label, placeholder: t( :label ), autofocus: true
    %div#commands
      = f.submit t( :create )
      = f.submit t( :cancel )
